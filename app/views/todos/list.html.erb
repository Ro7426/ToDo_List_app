<%= link_to "back", todos_path  %>




<div class="container">
  <div class="row">
        <div class="col-lg-6">
                <h1>COMPLETADO</h1>

                <% @todos.each do |todo| %>

                    <div>
                        <% if todo.completed %>

                        <%= todo.description %>
                        <%= todo.completed %>

                        <%end %>

                    </div>
                <%end %>
        </div>

                <div class="col-lg-6">

                <h1>NO COMPLETADO</h1>
                
                <% @todos.each do |todo| %>

                    <div>
                        <% if !todo.completed %>

                        <%= todo.description %>
                        <%= todo.completed %>

                        <%end %>
                    </div>
                <%end %>
        </div>

    </div>
</div>